{
  "name": "backend",
  "version": "1.0.0",
  "description": "FieldCheck backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern='/__tests__/(middleware|utils)' --coverage",
    "test:integration": "jest --testPathPattern='/__tests__/integration' --coverage",
    "test:coverage": "jest --coverage --collectCoverageFrom='backend/**/*.js' --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^10.2.3",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.13",
    "otp": "^2.0.1",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "google-auth-library": "^9.14.1",
    "pdfkit": "^0.13.0",
    "exceljs": "^4.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jest-junit": "^16.0.0",
    "@types/jest": "^29.5.8",
    "jest-mock-extended": "^3.0.5"
  }
}
