# .env.production - FieldCheck Backend Production Configuration
# Copy this to .env in the backend folder and fill in your production values

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=production

# ============================================
# DATABASE CONFIGURATION (MongoDB Atlas)
# ============================================
# Format: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# Get this from MongoDB Atlas → Clusters → Connect → Connection String
MONGODB_URI=mongodb+srv://fieldcheck_admin:[YOUR_PASSWORD]@fieldcheck-prod.xxxxx.mongodb.net/?retryWrites=true&w=majority

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_TO_A_STRONG_SECRET_KEY_123456789
JWT_EXPIRY=24h

# ============================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ============================================
# Use Gmail App Password (16 characters)
# Steps:
# 1. Go to myaccount.google.com
# 2. Security → App passwords
# 3. Select Mail → Windows Computer
# 4. Copy the 16-character password
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=xxxx-xxxx-xxxx-xxxx
EMAIL_FROM=FieldCheck <noreply@fieldcheck.app>

# ============================================
# FRONTEND CONFIGURATION (CORS)
# ============================================
# Set to your frontend URL (wherever Flutter web is deployed)
FRONTEND_URL=https://fieldcheck.vercel.app
# Or if using localhost in development:
# FRONTEND_URL=http://localhost:3000

# ============================================
# SOCKET.IO CONFIGURATION
# ============================================
SOCKET_IO_ORIGIN=https://fieldcheck.vercel.app
SOCKET_IO_CREDENTIALS=true

# ============================================
# LOGGING (Optional)
# ============================================
LOG_LEVEL=info
LOG_FILE=/var/log/fieldcheck.log

# ============================================
# SECURITY
# ============================================
# Rate limiting requests per 15 minutes
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================
# SESSION & COOKIES
# ============================================
SESSION_SECRET=CHANGE_ME_TO_ANOTHER_STRONG_SECRET
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
